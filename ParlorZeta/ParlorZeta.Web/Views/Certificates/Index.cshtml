@model ParlorZeta.Web.Models.Certificates.CertificateList

<h2>Certificate Management</h2>

<div class="row">
    <div class="col-md-12">
        @if (Model.PublishSettingses.Any())
        {
            <table class="table table-striped table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var setting in Model.PublishSettingses)
                    {
                        <tr>
                            <td>@setting.Id</td>
                            <td>@setting.Name</td>
                            <td>
                                @if (setting.Id == Model.SelectedId)
                                {
                                    <span class="label-info">Selected</span>
                                }
                                else
                                {
                                    <form method="POST" action="@Url.Action("Select")">
                                        <input type="hidden" name="selectedCertificateId" value="@setting.Id" />
                                        <button class="btn btn-default" type="submit" >
                                            <span class="glyphicon glyphicon-cloud">Select</span>
                                        </button>                                       
                                    </form>
                                }
                                <span>
                                    <a class="btn btn-default" href="@Url.Action("Delete", new { id = setting.Id })">
                                        Delete
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </a>
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div>You have no certificates. Upload a certificate now!</div>
        }
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <h3>Upload Certificate</h3>
        <form name="certificateUpload" method="post" action="@Url.Action("Upload")" enctype="multipart/form-data">
            <fieldset>
                <div class="form-group">
                    <label>Certificate</label>
                    <input type="file" name="certificateFile" class="form-control">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Upload" />
                </div>
            </fieldset>
        </form>
    </div>
</div>
