@model IEnumerable<ParlorZeta.Azure.Certificates.PublishSettings>

<h2>Certificate Management</h2>

<div class="row">
    <div class="col-md-12">
        @if (Model.Any())
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Id</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var setting in Model)
                    {
                        <tr>
                            <td>@setting.Id</td>
                            <td>@setting.Name</td>
                            <td>
                                <span >
                                    <a class="btn btn-danger" href="@Url.Action("Delete", new { id = setting.Id })">
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </a>
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div>You have no certificates. Upload a certificate now!</div>
        }
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <h3>Upload Certificate</h3>
        <form name="certificateUpload" method="post" action="@Url.Action("Upload")" enctype="multipart/form-data">
            <fieldset>
                <div class="form-group">
                    <label>Certificate</label>
                    <input type="file" name="certificateFile" class="form-control">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Upload" />
                </div>
            </fieldset>
        </form>
    </div>
</div>
